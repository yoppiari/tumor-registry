# INAMOS Backend Development Environment Configuration
# Indonesian National Cancer Database - Local Development

# Database Configuration
POSTGRES_DB=inamsos_dev
POSTGRES_USER=inamsos
POSTGRES_PASSWORD=dev_password
DATABASE_URL=postgresql://inamsos:dev_password@localhost:5432/inamsos_dev

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Configuration - Development Only (CHANGE IN PRODUCTION)
JWT_SECRET=inamsos_jwt_secret_2025_development_super_secure_key_change_in_production
JWT_REFRESH_SECRET=inamsos_refresh_secret_2025_development_super_secure_key_change_in_production
JWT_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=30d

# Application Configuration
NODE_ENV=development
PORT=3001
APP_NAME=INAMSOS
APP_VERSION=1.0.0
CORS_ORIGIN=http://localhost:3000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_NAME=INAMSOS Dev
NEXT_PUBLIC_VERSION=1.0.0

# MinIO Object Storage Configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin2025
MINIO_USE_SSL=false
MINIO_BUCKET=inamsos-files

# Email Configuration (Development - can use Mailtrap or similar)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@inamsos.dev
SMTP_FROM_NAME=INAMSOS Development

# Development Configuration
LOG_LEVEL=debug
ENABLE_SWAGGER=true
ENABLE_CORS=true
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Session Configuration
SESSION_SECRET=inamsos_session_secret_2025_development
SESSION_TTL=3600

# Security Configuration
BCRYPT_ROUNDS=10
ENABLE_MFA=false
MFA_ISSUER=INAMSOS Dev

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Pagination Configuration
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Cache Configuration
CACHE_TTL=3600

# Development-specific Settings
MOCK_EMAIL_SERVICE=true
DISABLE_EMAIL_VERIFICATION=false
ENABLE_MOCK_DATA=false