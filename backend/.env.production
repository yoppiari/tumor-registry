# Application Configuration
NODE_ENV=production
PORT=3000
APP_NAME=INAMSOS Tumor Registry
APP_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/inamsos_prod
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=inamsos_prod
DATABASE_USER=username
DATABASE_PASSWORD=password
DATABASE_SSL=true
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
ENCRYPTION_KEY=your-32-character-encryption-key
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@inamsos.go.id

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=/var/lib/inamsos/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# Backup Configuration
BACKUP_STORAGE_PATH=/var/lib/inamsos/backups
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
BACKUP_RETENTION_DAYS=90

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/var/log/inamsos/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
PERFORMANCE_MONITORING=true

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGIN=https://inamsos.go.id
CORS_CREDENTIALS=true

# API Documentation
API_DOCS_ENABLED=false
SWAGGER_ENABLED=false

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# Report Generation
REPORTS_TEMP_PATH=/tmp/inamsos-reports
REPORTS_RETENTION_DAYS=7

# Notification System
NOTIFICATION_QUEUE_NAME=notifications
NOTIFICATION_CONCURRENCY=5

# Backup System
BACKUP_QUEUE_NAME=backups
BACKUP_CONCURRENCY=2

# Scheduled Tasks
TASK_QUEUE_NAME=tasks
TASK_CONCURRENCY=3

# External Integrations
INTEGRATION_TIMEOUT=30000
INTEGRATION_RETRY_ATTEMPTS=3

# Data Export/Import
EXPORT_TEMP_PATH=/tmp/inamsos-exports
IMPORT_TEMP_PATH=/tmp/inamsos-imports
EXPORT_RETENTION_DAYS=3

# Production Settings
DEBUG=false
VERBOSE_LOGGING=false
ERROR_TRACKING=true
PERFORMANCE_PROFILING=false

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/inamsos.crt
SSL_KEY_PATH=/etc/ssl/private/inamsos.key

# Load Balancer
BEHIND_PROXY=true
TRUST_PROXY=1

# Health Checks
HEALTH_CHECK_CRITICAL_TIMEOUT=5000
HEALTH_CHECK_WARNING_TIMEOUT=2000

# External Service URLs
EXTERNAL_API_URL=https://api.inamsos.go.id
FRONTEND_URL=https://inamsos.go.id
ADMIN_URL=https://admin.inamsos.go.id